<script type="text/javascript">

$(document).ready(function(){
	$("#enter").click(function(){

	if ( ($('#username').val() == "") || ($('#pass').val() == "") ){
		$("#message").hide();
        $("#message").html('<p class ="alert alert-warning" role="alert">All fields are required.</p>');
        $("#message").show(1000);
        return false;
	}

    $.ajax({
    	type: "POST",
		url: "/login",
		//contentType: "application/json; charset=utf-8",
      	//dataType: "json",
      	data: {username: $('#username').val(), password: $('#pass').val()},

      	success: function(data){
			//console.log(data);
			//console.log(data.control);
			if(data.control == 0)
          		window.location = '/home';
          		//window.location.href = '/home';
        	if(data.control == 1){
		        $("#message").hide();
		        $("#message").html('<p class ="alert alert-danger" role="alert">Username does not exist.</p>');
		        $("#message").show(1000);
        	}
	        if(data.control == 2){
	          $("#message").hide();
	          $("#message").html('<p class="alert alert-danger" role="alert">Password incorrect.</p>');
	          $("#message").show(1000);
	        }
		},

		error: function(xhr){;
			console.log(xhr.status);
	    	console.log(xhr.statusText);
		}
		});
	});

	document.onkeypress = function(event){
		if ( event.which == 13 ) {

	     	if ( ($('#username').val() == "") || ($('#pass').val() == "") ){
				$("#message").hide();
		        $("#message").html('<p class ="alert alert-warning" role="alert">All fields are required</p>');
		        $("#message").show(1000);
		        return false;
			}

	    $.ajax({
	    	type: "POST",
			url: "/login",
			//contentType: "application/json; charset=utf-8",
	      	//dataType: "json",
	      	data: {username: $('#username').val(), password: $('#pass').val()},

	      	success: function(data){
				//console.log(data);
				//console.log(data.control);
				if(data.control == 0)
	          		window.location = '/home';
	          		//window.location.href = '/home';
	        	if(data.control == 1){
			        $("#message").hide();
			        $("#message").html('<p class ="alert alert-danger" role="alert">Username does not exist</p>');
			        $("#message").show(1000);
	        	}
		        if(data.control == 2){
		          $("#message").hide();
		          $("#message").html('<p class="alert alert-danger" role="alert">Password incorrect</p>');
		          $("#message").show(1000);
		        }
			},

			error: function(xhr){;
				console.log(xhr.status);
		    	console.log(xhr.statusText);
			}
			});
		}
	}
});

</script>
